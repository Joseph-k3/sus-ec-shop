# Supabase設定
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Square決済設定
VITE_SQUARE_APPLICATION_ID=your_square_application_id
VITE_SQUARE_LOCATION_ID=your_square_location_id
VITE_SQUARE_ACCESS_TOKEN=your_square_access_token

# Postmark設定（メール送信）
VITE_POSTMARK_API_KEY=your_postmark_api_key
VITE_SENDER_EMAIL=your_sender_email

# サイト認証用パスワード
VITE_SITE_PASSWORD=your_site_password

# Cloudflare R2設定（画像ストレージ）
VITE_USE_R2_FOR_IMAGES=false
# フロントエンド用（公開しても安全な値のみ）
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_R2_BUCKET_NAME=sus-ec-images
VITE_CLOUDFLARE_R2_PUBLIC_URL=https://pub-your_account_id.r2.dev
# サーバーサイド用（機密情報、VITE_プレフィックスなし）
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=sus-ec-images
CLOUDFLARE_R2_PUBLIC_URL=https://pub-your_account_id.r2.dev

# Bunny Stream設定（動画ストレージ）
VITE_BUNNY_STREAM_LIBRARY_ID=your_bunny_stream_library_id
VITE_BUNNY_STREAM_API_KEY=your_bunny_stream_api_key
VITE_BUNNY_STREAM_CDN_HOSTNAME=your_cdn_hostname
VITE_SQUARE_ACCESS_TOKEN=your-square-access-token

# その他の設定
VITE_SUPPORT_EMAIL=support@susplants.com
VITE_SENDER_EMAIL=your-verified-sender@yourdomain.com
