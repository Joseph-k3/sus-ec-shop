# Supabase設定
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudflare R2設定（メディアストレージ）
VITE_R2_ACCOUNT_ID=your_cloudflare_account_id
VITE_R2_ACCESS_KEY_ID=your_r2_access_key_id
VITE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
VITE_R2_BUCKET_NAME=your_bucket_name
VITE_R2_PUBLIC_URL=https://your_r2_public_domain_here

# ストレージ設定（どちらを使用するか）
VITE_STORAGE_PROVIDER=supabase
# VITE_STORAGE_PROVIDER=r2

# Square Payment設定
VITE_SQUARE_APPLICATION_ID=your_square_app_id_here
VITE_SQUARE_LOCATION_ID=your_square_location_id_here

# Postmark設定（メール送信）
POSTMARK_SERVER_TOKEN=your_postmark_server_token_here

# 管理者設定
VITE_ADMIN_EMAIL=admin@example.com

# アプリケーション設定
VITE_APP_NAME=SUS Plants
VITE_APP_URL=https://your-domain.com

# デバッグ設定
NODE_ENV=development
VITE_DEBUG=true

# セキュリティ設定
VITE_SESSION_SECRET=your_session_secret_key_here

# ログイン設定
VITE_SITE_PASSWORD=susplants2025

# 画像ストレージ切り替え設定
VITE_USE_R2_FOR_IMAGES=false

# スプラッシュ画面制御
VITE_FORCE_SPLASH=false

# Cloudflare R2設定（画像用）
VITE_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
VITE_CLOUDFLARE_R2_ACCESS_KEY_ID=your_cloudflare_r2_access_key_id
VITE_CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_cloudflare_r2_secret_access_key
VITE_CLOUDFLARE_R2_BUCKET_NAME=sus-ec-images
VITE_CLOUDFLARE_R2_PUBLIC_URL=your_cloudflare_r2_public_url

# Bunny Stream設定（動画ストレージ）
VITE_BUNNY_STREAM_LIBRARY_ID=your_bunny_stream_library_id
VITE_BUNNY_STREAM_API_KEY=your_bunny_stream_api_key
VITE_BUNNY_STREAM_CDN_HOSTNAME=your_bunny_stream_cdn_hostname
VITE_BUNNY_STREAM_COLLECTION_ID=your_bunny_stream_collection_id

# Postmark設定（Supabase Edge Functions用）
POSTMARK_API_KEY=your_postmark_api_key_here
SENDER_EMAIL=your_verified_sender_email_here

# Square決済用アクセストークン
VITE_SQUARE_ACCESS_TOKEN=your_square_access_token

# その他の設定
VITE_SUPPORT_EMAIL=support@susplants.com
VITE_SENDER_EMAIL=your-verified-sender@yourdomain.com
